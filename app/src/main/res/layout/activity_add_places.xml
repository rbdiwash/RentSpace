<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPlaces">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/linear_heading_add_places"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/location_art"
                android:layout_marginLeft="20dp"/>
            <TextView
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add a Place Here:"
                android:textSize="25dp"
                android:textColor="#000000"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_add_places_edit_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linear_heading_add_places"
            android:layout_marginTop="40dp">
            <EditText
                android:id="@+id/add_places_edit_address"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@drawable/address_art"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Enter the address here..."/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_add_places_edit_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linear_add_places_edit_address"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/add_places_edit_price"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@drawable/price_art"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Enter the price here..."
                android:inputType="number"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_add_places_edit_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linear_add_places_edit_price"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/add_places_edit_area"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@drawable/scale_art"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Enter dimensions of room..." />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_add_places_edit_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linear_add_places_edit_area"
            android:layout_marginTop="20dp">
            <EditText
                android:id="@+id/add_places_edit_description"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:drawableLeft="@drawable/description_art"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="  Enter description of the room..." />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_add_places_submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/linear_add_places_edit_description"
            android:layout_marginTop="20dp"
            android:gravity="center">
            <Button
                android:id="@+id/add_places_submit_button"
                android:layout_marginLeft="30dp"
                android:textColor="#000000"
                android:textSize="15dp"
                android:layout_marginRight="50dp"
                android:drawableLeft="@drawable/add_room_art"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Submit"
                android:textAllCaps="false"/>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>